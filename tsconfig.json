{
  "extends": "@tsconfig/node12/tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./lib",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": false,
    "allowJs": true,
    "skipLibCheck": false
  },
  "exclude": ["examples/", "lib/", "node_modules/"],
  "include": ["src/**/*.ts", "src/**/*.js"]
}
