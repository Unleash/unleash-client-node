{
  "extends": [
    "plugin:import/recommended",
    "plugin:import/typescript",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 8,
    "project": ["./jsconfig.json", "./tsconfig.json"]
  },
  "rules": {
    "no-console": 0,
    "no-plusplus": "off",
    "max-len": [
      "error",
      {
        "code": 100,
        "ignoreTrailingComments": true,
        "ignoreUrls": true
      }
    ],
    "class-methods-use-this": "off"
  },
  "settings": {
    "import/resolver": {
      "typescript": true
    }
  }
}
